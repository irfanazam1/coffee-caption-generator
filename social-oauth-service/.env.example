# Database Configuration
DB_HOST=localhost
DB_PORT=5434
DB_NAME=oauth_db
DB_USER=postgres
DB_PASSWORD=change_this_password

# Security (REQUIRED - Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-generated-fernet-encryption-key-here
SERVICE_API_KEY=your-secure-service-api-key-for-main-app
SECRET_KEY=your-jwt-secret-key-here

# Redis (Optional - for job queue)
REDIS_URL=redis://localhost:6379
REDIS_DB=0

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8001
BASE_CALLBACK_URL=http://localhost:8001

# Server Base URL (for serving temporary images to Instagram)
# If not set, will default to http://localhost:PORT
# Set this to your public URL if running behind a proxy or in production
# Example: SERVER_BASE_URL=https://your-domain.com
SERVER_BASE_URL=

# Instagram OAuth Configuration
# Get these from: https://developers.facebook.com/
INSTAGRAM_CLIENT_ID=your_instagram_app_id
INSTAGRAM_CLIENT_SECRET=your_instagram_app_secret
INSTAGRAM_REDIRECT_URI=http://localhost:8001/api/v1/oauth/instagram/callback

# Facebook OAuth Configuration
# Get these from: https://developers.facebook.com/
FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:8001/api/v1/oauth/facebook/callback

# Twitter/X OAuth Configuration
# Get these from: https://developer.twitter.com/
TWITTER_CLIENT_ID=your_twitter_client_id
TWITTER_CLIENT_SECRET=your_twitter_client_secret
TWITTER_REDIRECT_URI=http://localhost:8001/api/v1/oauth/twitter/callback
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_optional

# Twitter App Credentials (OAuth 1.0a - Required for media uploads)
# Get these from: https://developer.twitter.com/ > Your App > Keys and Tokens
# API Key = Consumer Key, API Secret = Consumer Secret
TWITTER_API_KEY=your_twitter_api_key_consumer_key
TWITTER_API_SECRET=your_twitter_api_secret_consumer_secret

# Token Refresh Settings
TOKEN_REFRESH_THRESHOLD_MINUTES=30
TOKEN_REFRESH_RETRY_ATTEMPTS=3

# Post Scheduling
SCHEDULER_CHECK_INTERVAL_SECONDS=60
MAX_CONCURRENT_POSTS=5

# Rate Limiting
RATE_LIMIT_POSTS_PER_HOUR=50
RATE_LIMIT_POSTS_PER_DAY=200

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_SECONDS=60
